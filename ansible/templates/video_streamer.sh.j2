#!/bin/bash

ffmpeg -hwaccel vaapi -hwaccel_device /dev/dri/renderD128 \
	-f v4l2 -input_format yuyv422 -framerate 24 -video_size 1280x720 \
       	-i /dev/v4l/by-id/usb-046d_C922_Pro_Stream_Webcam_$1-video-index0 \
 	-vf 'format=nv12,hwupload' -map 0:0 -profile:v 77 -level 51 -qp 25 -quality 0 \
 	-vcodec h264_vaapi \
 	-f rtsp -rtsp_transport tcp rtsp://{{rtsp_address}}:8554/$2
